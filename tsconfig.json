{
  "compilerOptions": {
    "target": "ES2020",                // Use modern JS features
    "module": "commonjs",              // For Node.js compatibility
    "esModuleInterop": true,           // Allow default imports from modules with no default export
    "forceConsistentCasingInFileNames": true,
    "strict": true,                    // Enable all strict type-checking options
    "skipLibCheck": true,              // Ignore type checking of all declaration files
    "outDir": "scripts",               // Output compiled files into 'scripts' directory
    "resolveJsonModule": true,         // Import JSON files
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "scripts/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
